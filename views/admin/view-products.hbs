




<section class="login-block">
  <div class="pcoded-content">
    <!-- Container-fluid starts -->
    <div class="container ">
      <div class="row ">
        <div class="col-sm-12 ">
          <div class="row mt-4">
            <a href="/admin/add-product" class="btn btn-success ml-auto">add product</a>
          </div>
          <table class="table">
            <thead>
              <tr>
                <th scope="col">No</th>
                <th scope="col">Name</th>
                <th scope="col">Category</th>

                <th scope="col">Price</th>
                <th scope="col">Real Price</th>
                <th scope="col">Image</th>
              </tr>
            </thead>
            <tbody>
              {{#each products}}
              <tr>
                <th scope="row">{{inc @index}}</th>
                <td>{{this.name}}</td>

                <td>{{this.category}}</td>
                <td>{{this.price}}</td>
                <td>{{this.Realprice}}</td>
                <td><img style="width:50px;height:50px" src="/product-Images/{{this.image.[0]}}" alt=""></td>
                <td>
                  <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary"> edit</a>
                  <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger"
                    onclick="return confirm('press OK to delete this item {{this.name}}')">delete</a>
                </td>

              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>