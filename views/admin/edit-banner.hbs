          <!-- Container-fluid starts -->
          <div class="container ">
              <div class="row ">
                  <div class="col-sm-12 ">
                    <form action="/admin/edit-banner/{{banner._id}}" enctype="multipart/form-data" method="post">
                        <div class="form-group">
