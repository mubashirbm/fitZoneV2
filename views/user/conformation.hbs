				<h2>Order Details</h2>
				<div class="table-responsive">
					<table class="table">
						<thead>
							<tr>
								<th scope="col">Product</th>
								<th scope="col">Quantity</th>
								<th scope="col">Price</th>
							</tr>
						</thead>
						<tbody>
                            {{#each products}}
							<tr>
								<td>
									<p>{{product.name}}</p>
								</td>
								<td>
									<h5>x {{quantity}}</h5>
								</td>
								<td>
									<p>{{product.price}}</p>
								</td>
