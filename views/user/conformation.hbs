	<section class="order_details section_gap">
		<div class="container">
			<h3 class="title_confirmation">Thank you. Your order has been Placed.</h3>
			<div class="row order_d_inner">
				<div class="col-lg-4">
					<div class="details_item">
						<h4>Order Info</h4>
						<ul class="list">
							<li><a href="#"><span>Order number</span> : {{order._id}}</a></li>
							<li><a href="#"><span>Date</span> : {{order.Date}}</a></li>
							<li><a href="#"><span>Total</span> : {{order.total}} . Rs</a></li>
							<li><a href="#"><span>Payment method</span> : {{order.paymentMethod}}</a></li>
						</ul>
					</div>
				</div>
				<div class="col-lg-4">
